        <div class="absolute">
          <img
            class="ring-2 h-24 w-24 ring-offset-4 ring-offset-black ring-white/50 rounded-full ml-16 mt-52"
            src="https://crowdparty.app/assets/landing-faces/face-bottom-left-2.png"
            alt=""
          />
        </div>
        <div class="absolute">
          <img
            class="ring-2 h-24 w-24 ring-offset-4 ring-offset-black ring-white/50 rounded-full mt-12 ml-32"
            src="https://crowdparty.app/assets/landing-faces/face-bottom-left-3.png"
            alt=""
          />
        </div>
        <div class="absolute right-0">
          <img
            class="ring-2 h-24 w-24 ring-offset-4 ring-offset-black ring-white/50 rounded-full right-0 mt-64 mr-24"
            src="https://crowdparty.app/assets/landing-faces/face-top-right-1.png"
            alt=""
          />
        </div>
        <div class="absolute right-0">
          <img
            class="ring-2 h-24 w-24 ring-offset-4 ring-offset-black ring-white/50 rounded-full mr-48"
            src="https://crowdparty.app/assets/landing-faces/face-top-right-2.png"
