          <a
            class="py-2 text-sm text-white/50 font-medium hover:text-white"
            href="#">Zest</a
          >
          <a
            class="py-2 text-sm text-white/50 font-medium hover:text-white"
            href="#">Pricing</a
          >
          <a
            class="py-2 text-sm text-white/50 font-medium hover:text-white"
            href="#">Blog</a
          >
          <a
            class="py-2 text-sm text-white/50 font-medium hover:text-white"
            href="#">Support</a
          >

          <a
            class="justify-center px-6 py-2 text-sm font-medium text-cyan-500 bg-cyan-400/5 rounded-full group focus:outline-none focus-visible:outline-2 focus-visible:outline-offset-2 hover:bg-cyan-500/5 active:bg-fuchsia-50 active:text-black hover:text-cyan-500 focus-visible:outline-fuchsia-50">
            Login
          </a>
        </nav>
      </div>
    </div>
  </section>
  <section
    class="flex items-center justify-center relative neue-haas overflow-hidden">
    <div
      class="relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-16 max-w-7xl lg:py-32">
